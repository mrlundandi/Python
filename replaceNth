def replace_nth_char(text, n, old_value, new_value):
    """
    Replaces every nth occurrence of old_value in text with new_value.
    """
    # Check for invalid inputs
    if n <= 0 or n > text.count(old_value):
        return text
    
    # Split the text into a list of characters
    chars = list(text)
    
    # Loop through the list and replace the nth occurrences of old_value with new_value
    count = 0
    for i in range(len(chars)):
        if chars[i] == old_value:
            count += 1
            if count % n == 0:
                chars[i] = new_value
    
    # Join the list of characters back into a string and return it
    return "".join(chars)
